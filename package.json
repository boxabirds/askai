{
  "name": "askai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "openapi --input ./src/api/openapi.yaml --output ./src/api/generated",
    "generate:tools": "bun run scripts/generate-openai-tools.ts",
    "dev:server": "bun run generate && bun run --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "bun run generate && bun build ./src/client/index.tsx --outdir ./dist",
    "preview": "vite preview",
    "server": "bun run src/server/index.ts",
    "cleanup": "pkill -f \"bun run\" || true",
    "dev:all": "bun run cleanup && concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "test:server": "DB_NAME=todos.test.sqlite bun run src/server/index.ts",
    "test": "bun test",
    "test:all": "concurrently \"bun run test:server\" \"sleep 1 && bun test\""
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/swagger": "^0.8.0",
    "@google/generative-ai": "^0.1.0",
    "@headlessui/react": "^1.7.6",
    "@heroicons/react": "^2.0.13",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^4.34.0",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "date-fns": "^3.3.1",
    "elysia": "^0.8.17",
    "lucide-react": "^0.330.0",
    "openapi-types": "^12.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.39.3",
    "react-toastify": "^9.1.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "yaml": "^2.7.0",
    "zod": "^3.20.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "bun-types": "^1.2.2",
    "openapi-typescript-codegen": "^0.29.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.1"
  }
}
